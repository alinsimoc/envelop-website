{
  "private": true,
  "author": "Dotan Simha <dotansimha@gmail.com>",
  "license": "MIT",
  "workspaces": [
    "./packages/*",
    "./packages/plugins/*",
    "./examples/*"
  ],
  "scripts": {
    "prepare": "husky install",
    "benchmark": "NODE_ENV=production ts-node --project tsconfig.benchmark.json benchmark/execute.case.ts",
    "postinstall": "patch-package",
    "lint": "eslint --config .eslintrc.json --ext .ts .",
    "prebuild": "rimraf packages/*/dist",
    "build": "bob-esbuild tsc && pnpm prepack -r",
    "test": "jest",
    "test:ci": "jest --coverage",
    "prerelease": "yarn build",
    "release": "changeset publish",
    "release:canary": "(node scripts/canary-release.js && yarn build && yarn changeset publish --tag alpha) || echo Skipping Canary...",
    "prettier": "prettier --ignore-path .gitignore --write --list-different \"**/*.{ts,tsx,graphql,yml}\""
  },
  "devDependencies": {
    "@changesets/cli": "2.16.0",
    "@graphql-tools/schema": "7.1.5",
    "@types/benchmark": "2.1.0",
    "@types/jest": "26.0.23",
    "@types/node": "15.6.1",
    "@typescript-eslint/eslint-plugin": "4.25.0",
    "@typescript-eslint/parser": "4.25.0",
    "apollo-server": "2.25.0",
    "benchmark": "2.1.4",
    "bob-esbuild-cli": "^0.1.13",
    "eslint": "7.27.0",
    "eslint-config-prettier": "8.3.0",
    "eslint-config-standard": "16.0.3",
    "eslint-plugin-import": "2.23.4",
    "eslint-plugin-node": "11.1.0",
    "eslint-plugin-promise": "5.1.0",
    "husky": "6.0.0",
    "jest": "27.0.3",
    "lint-staged": "11.0.0",
    "patch-package": "6.4.7",
    "prettier": "2.3.0",
    "pretty-quick": "3.1.0",
    "rimraf": "3.0.2",
    "ts-jest": "27.0.1",
    "ts-node": "10.0.0",
    "typescript": "4.3.2"
  },
  "resolutions": {
    "@changesets/git": "1.1.1",
    "prettier": "2.3.0"
  },
  "lint-staged": {
    "packages/**/src/**/*.{ts,tsx}": [
      "eslint --fix"
    ],
    "**/*.{ts,tsx,graphql,yml}": [
      "prettier --write"
    ],
    "**/*.json": [
      "prettier --write"
    ]
  },
  "dependencies": {
    "@changesets/apply-release-plan": "^5.0.0",
    "bob-esbuild": "^0.1.10",
    "tslib": "^2.2.0"
  }
}
